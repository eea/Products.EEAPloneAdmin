<?xml version="1.0"?>
<dc-workflow workflow_id="eea_default_workflow"
             title="EEA default workflow"
             state_variable="review_state"
             initial_state="draft">
 <permission>Access contents information</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <state state_id="content_pending"
        title="Pending (content review)">
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="submitProofReading"/>
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="quickPublish"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="draft" title="First draft">
  <exit-transition transition_id="autoSubmitCopyEdit"/>
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="showPublicDraft"/>
  <exit-transition transition_id="submitCopyEdit"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="new" title="Pending (copy editing)">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="submitContentReview"/>
  <exit-transition transition_id="submitProofReading"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="private" title="Private">
  <exit-transition transition_id="publishInternally"/>
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="submitContentReview"/>
  <exit-transition transition_id="submitCopyEdit"/>
  <exit-transition transition_id="submitProofReading"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="proof_reading"
        title="Pending (Proof reading)">
  <exit-transition transition_id="submit"/>
  <permission-map name="Access contents information"
                  acquired="True">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>ProofReader</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="published" title="Published">
  <exit-transition transition_id="publishInternally"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="showPublicDraft"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
  </permission-map>
 </state>
 <state state_id="published_internally"
        title="Published internally">
  <description>Content published internally is in final state but not visible from the public, login to CMS is required.</description>
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="show"/>
  <exit-transition transition_id="submit"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>CommonEditor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>CommonEditor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="retracted" title="Retracted">
  <exit-transition transition_id="enable"/>
  <exit-transition transition_id="publish"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
 </state>
 <state state_id="visible" title="Public draft">
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="submitContentReview"/>
  <exit-transition transition_id="submitCopyEdit"/>
  <exit-transition transition_id="submitProofReading"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Authenticated</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Authenticated</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="webqa_pending" title="Pending (web QA)">
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="show"/>
  <exit-transition transition_id="submitProofReading"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
   <permission-role>ContentManager</permission-role>
  </permission-map>
 </state>
 <transition transition_id="autoSubmitCopyEdit"
             title="(Auto) Submit for copy editing"
             new_state="new" trigger="AUTOMATIC"
             before_script="" after_script="">
  <action url="" category="workflow">Submit for copy editing</action>
  <guard>
   <guard-role>Editor</guard-role>
  </guard>
 </transition>
 <transition transition_id="enable" title="enable"
             new_state="new" trigger="USER" before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">enable</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="hide"
             title="Owner makes content private"
             new_state="private" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_hide_form"
          category="workflow">Make private</action>
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="publish" title="Publish"
             new_state="published" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Publish</action>
  <guard>
   <guard-role>WebReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="publishInternally"
             title="Publish internally"
             new_state="published_internally" trigger="USER"
             before_script="" after_script="">
  <description>Publish content internally. Only accessible to authorised users.</description>
  <action url="" category="workflow">Publish internally (login protected)</action>
  <guard>
   <guard-role>CommonEditor</guard-role>
  </guard>
 </transition>
 <transition transition_id="quickPublish" title="Publish"
             new_state="published" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Publish</action>
  <guard>
   <guard-role>Reviewer</guard-role>
   <guard-expression>here/@@transitionQuickPublish</guard-expression>
  </guard>
 </transition>
 <transition transition_id="reject"
             title="Back for revision" new_state="draft"
             trigger="USER" before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Back for revision</action>
  <guard>
   <guard-role>Manager</guard-role>
   <guard-role>WebReviewer</guard-role>
   <guard-role>Reviewer</guard-role>
   <guard-role>Editor</guard-role>
  </guard>
 </transition>
 <transition transition_id="retract" title="Retract"
             new_state="retracted" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Retract</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="show" title="Make draft public"
             new_state="visible" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Make draft public</action>
  <guard>
   <guard-role>WebReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="showPublicDraft"
             title="Make visible only via direct link"
             new_state="visible" trigger="USER"
             before_script="" after_script="">
  <description>Make the content visible as public draft with direct url, not in navigation and listings. Useful for external anonymous consultation (without having to login).</description>
  <action url="" category="workflow">Visible with direct link</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="submit"
             title="Submit for Web QA"
             new_state="webqa_pending" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Submit for Web QA</action>
  <guard>
   <guard-role>Reviewer</guard-role>
   <guard-role>Editor</guard-role>
   <guard-role>ProofReader</guard-role>
   <guard-role>ContentManager</guard-role>
   <guard-expression>here/@@transitionSubmit</guard-expression>
  </guard>
 </transition>
 <transition transition_id="submitContentReview"
             title="Submit for content review"
             new_state="content_pending" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="%(content_url)s/content_submit_form"
          category="workflow">Submit for content review</action>
  <guard>
   <guard-role>Editor</guard-role>
   <guard-expression>here/@@transitionSubmitContentReview</guard-expression>
  </guard>
 </transition>
 <transition transition_id="submitCopyEdit"
             title="Submit for copy editing" new_state="new"
             trigger="USER" before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Submit for copy editing</action>
  <guard>
   <guard-role>ContentManager</guard-role>
  </guard>
 </transition>
 <transition transition_id="submitProofReading"
             title="Submit for proof reading"
             new_state="proof_reading" trigger="USER"
             before_script=""
             after_script="sendWorkflowEmail">
  <action url="" category="workflow">Submit for proof reading</action>
  <guard>
   <guard-role>Manager</guard-role>
   <guard-role>Reviewer</guard-role>
   <guard-expression>here/@@transitionSubmitProofReading</guard-expression>
  </guard>
 </transition>
 <worklist worklist_id="contentReview" title="">
  <description>For content review</description>
  <action url="" category="global">Content review pennding</action>
  <guard>
   <guard-role>Reviewer</guard-role>
  </guard>
  <match name="review_state" values="content_pending"/>
 </worklist>
 <worklist worklist_id="newAndDraft" title="">
  <description>Content pending in first draft</description>
  
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
  <match name="review_state" values="draft"/>
 </worklist>
 <worklist worklist_id="pendingWebQA" title="">
  <description>pending for web QA (final web publishing)</description>
  
  <guard>
   <guard-role>WebReviewer</guard-role>
  </guard>
  <match name="review_state" values="webqa_pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <script script_id="publish" type="External Method"
         filename=""
         module="EEAContentTypes.frontpage_workflow_scripts"
         function="publish"/>
 <script script_id="reject" type="External Method"
         filename=""
         module="EEAContentTypes.frontpage_workflow_scripts"
         function="reject"/>
 <script script_id="sendWorkflowEmail"
         type="External Method" filename=""
         module="EEAContentTypes.frontpage_workflow_scripts"
         function="sendWorkflowEmail"/>
 <script script_id="submitForContentReview"
         type="External Method" filename=""
         module="EEAContentTypes.frontpage_workflow_scripts"
         function="submitForContentReview"/>
 <script script_id="submitForProofReading"
         type="External Method" filename=""
         module="EEAContentTypes.frontpage_workflow_scripts"
         function="submitForProofReading"/>
 <script script_id="submitForWebQA" type="External Method"
         filename=""
         module="EEAContentTypes.frontpage_workflow_scripts"
         function="submitForWebQA"/>
</dc-workflow>
