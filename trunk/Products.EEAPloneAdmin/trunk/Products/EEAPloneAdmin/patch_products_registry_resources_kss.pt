<tal:styles define="view context/@@resourceregistries_kss_view;
                    https python:'https' in context.absolute_url()">

    <tal:style_https condition="https">
        <tal:kss repeat="kss view/kineticstylesheets">
            <link rel="stylesheet" data-rel="kinetic-stylesheet"
                type="text/kss"
                tal:attributes="href python:kss['src'].replace('http','https')" />
        </tal:kss>
    </tal:style_https>

    <tal:style_http condition="not:https">
        <tal:kss repeat="kss view/kineticstylesheets">
            <link rel="stylesheet" data-rel="kinetic-stylesheet"
                type="text/kss"
                tal:attributes="href python:kss['src']" />
        </tal:kss>
    </tal:style_http>

</tal:styles>

