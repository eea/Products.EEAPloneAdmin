  <group-map name="data-service-editors">
   <group-role>Contributor</group-role>
   <group-role>Editor</group-role>
  </group-map>
  <group-map name="daviz-editors">
   <group-role>Contributor</group-role>
   <group-role>Editor</group-role>
  </group-map>
  <group-map name="daviz-reviewers">
   <group-role>Contributor</group-role>
   <group-role>Editor</group-role>
